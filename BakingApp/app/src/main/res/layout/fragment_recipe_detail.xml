<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/selected_recipe_name_textview"
                style="@style/BakingApp.TextView.Caption.PrimaryTitle"
                android:fontFamily="sans-serif-thin"
                tools:text="Chocolate Cake"/>

            <TextView
                style="@style/BakingApp.TextView.Caption.SectionHeader"
                android:text="@string/ingredients_title"/>

            <TextView
                android:id="@+id/ingredients_textarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingStart="16dp"
                android:paddingRight="16dp"
                android:paddingEnd="16dp"
                tools:text="- 1 Cup of mid sugar from the mediterranean sea of european spices \n- 2 cups of"/>

            <TextView
                style="@style/BakingApp.TextView.Caption.SectionHeader"
                android:text="@string/steps_title"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recipe_detail_step_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</layout>