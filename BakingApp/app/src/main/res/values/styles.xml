<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="BakingApp.ListItem.PrimaryText" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black_primary</item>
    </style>

    <style name="BakingApp.ListItem.SecondaryText" parent="BakingApp.ListItem.PrimaryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_hint</item>
    </style>

    <style name="BakingApp.RecyclerView.ErrorMessage" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BakingApp.TextView.Caption" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_primary</item>
    </style>

    <style name="BakingApp.TextView.Caption.Label" parent="BakingApp.TextView.Caption">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BakingApp.TextView.Caption.SectionHeader" parent="BakingApp.TextView.Caption.Label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BakingApp.TextView.Caption.PrimaryTitle" parent="BakingApp.TextView.Caption.Label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">22sp</item>
    </style>


    <style name="BakingApp.TextView.Caption.Bubble">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@drawable/step_circle_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white_primary</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>

</resources>
